</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Gully Cricket</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/data">Match Data</a>
                </li>
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        </div>
    </nav>
    <form action="/players" method="post" id="players-info">
        <div class="mb-3">
            <label for="numPlayers" class="form-label">Common Player: </label>
            <label for="yes" class="form-label">Yes</label>
            <input type="checkbox" name='yes' id="yes" value="yes">
            <label for="no" class="form-label">No</label>
            <input type="checkbox" name='no' id="no" value="no">
            <input type="text" name="common" class="form-control" id="commonPlayer" placeholder="Enter Common Player name:">
            //- <label for="single" class="form-label">Single Player</label>
            //- <input type="checkbox" name='single' id="single" value="single">
        </div>
    </form>

    <script src="/static/js/bootstrap.bundle.min.js"></script>
    //- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/static/js/common.js"></script>
    script.
        const form = document.getElementById('players-info');
        //- const single = document.getElementById('single');
        //- if(single.checked) {
        //-     var single = 'single';
        //- } else {
        //-     var single = '';
        //- }
        //- localStorage.setItem('single', single);
        var Team1 = `!{team1}`;
        var Team2 = `!{team2}`;
        var winingTeam = `!{toss}`;
        for(let j = 0; j < 2; j++) {
            if(j==0 && winingTeam == Team1){
                var teamName = Team1;
            } else if(j==0 && winingTeam == Team2){
                var teamName = Team2;
            }
            if(j==1 && winingTeam == Team1){
                var teamName = Team2;
            } else if(j==1 && winingTeam == Team2){
                var teamName = Team1;
            }
            var h3 = document.createElement('h3');
            h3.textContent = `Enter players for ${teamName}`;
            form.appendChild(h3);
            var numberOfPlayers = !{number};
            for(let i = 0; i < numberOfPlayers; i++) {
                const input = document.createElement('input');
                input.type = 'text';
                input.name = `player${(i + 1)+(j*numberOfPlayers)}`;
                input.className = 'form-control mt-2 mb-2';
                input.placeholder = `Player ${i + 1} Name`;
                input.required = 'required';
                form.appendChild(input);
            }
        }
        const submitButton = document.createElement('button');
        submitButton.type = 'submit';
        submitButton.className = 'btn btn-primary';
        submitButton.textContent = 'Start Match';
        form.appendChild(submitButton);
        
</body>
</html>
